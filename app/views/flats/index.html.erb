<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats (<%= @flats.size %>)</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p>All <%= @flats.size %> flats</p>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <i class="material-icons me-2">people</i>
        <span><%= flat.number_of_guests %></span>
        <i class="material-icons me-2">euro_symbol</i>
        " <%= flat.price_per_night %> "

        <%= link_to "More Details", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
</div>
